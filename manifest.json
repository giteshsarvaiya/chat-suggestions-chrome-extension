{
    "manifest_version": 3,
    "name": "Bot Reply Generator",
    "version": "1.0",
    "description": "Generate replies using different bot tones via Shapes API.",
    "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
 "permissions": ["activeTab", "scripting", "storage"],
    "host_permissions": ["<all_urls>"],
    "background": {
    "service_worker": "background.js"
    },
    "content_scripts": [
    {
        "matches": ["<all_urls>"],
        "js": ["contentScript.js"],
        "run_at": "document_idle",
        "type": "module"
    }
    ]
  }